<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.eystudio.android.firstlab.MoreActivity">

    <TableRow >


            <TextView android:layout_margin="5dp"
                style="@style/Caption"
                android:text="@string/cap_value"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                />

            <TextView  style="@style/ResultStyle"
                android:id="@+id/more_value"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:text="@string/start_text"/>

            <TextView android:layout_margin="5dp"
                style="@style/Caption"
                android:text="@string/cap_new_value"
                android:layout_height="match_parent"
                android:layout_width="wrap_content" />

            <TextView  android:layout_marginTop="10dp" style="@style/ResultStyle"
                android:id="@+id/more_new_value"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:text="@string/start_text"/>
    </TableRow>


    <TableRow>
        <Button style="@style/CalcButtonTheme"
            android:padding="20dp"
            android:id="@+id/button_more_ok"
            android:text="@string/cap_ok"/>
    </TableRow>

    <TableRow android:layout_weight="1">
        <Button style="@style/CalcButtonTheme"
            android:id="@+id/button_sin"
            android:text="@string/sin"/>
        <Button style="@style/CalcButtonTheme"
            android:id="@+id/button_cos"
            android:text="@string/cos"/>
    </TableRow>

    <TableRow android:layout_weight="1">
        <Button style="@style/CalcButtonTheme" android:id="@+id/button_tan" android:text="@string/tan"/>
        <Button style="@style/CalcButtonTheme" android:id="@+id/button_ctg" android:text="@string/ctg"/>
    </TableRow>

</TableLayout>

