<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="com.eystudio.android.firstlab.CalculatorActivity">


    <TableRow>

        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:background="@color/colorGray"
            android:textSize="20sp"
            android:text="Hello World!"/>
    </TableRow>

    <TableRow android:layout_marginTop="30dp" android:layout_weight="1">

        <Button style="@style/CalcButtonTheme" android:text="1"/>
        <Button style="@style/CalcButtonTheme" android:text="2"/>
        <Button style="@style/CalcButtonTheme" android:text="3"/>
        <Button style="@style/CalcButtonTheme" android:text="CL"/>
    </TableRow>

    <TableRow  android:layout_weight="1">

        <Button style="@style/CalcButtonTheme" android:text="4"/>
        <Button style="@style/CalcButtonTheme" android:text="5"/>
        <Button style="@style/CalcButtonTheme" android:text="6"/>
        <Button style="@style/CalcButtonTheme" android:text="="/>
    </TableRow>

    <TableRow  android:layout_weight="1">

        <Button style="@style/CalcButtonTheme" android:text="7"/>
        <Button style="@style/CalcButtonTheme" android:text="8"/>
        <Button style="@style/CalcButtonTheme" android:text="9"/>
        <Button style="@style/CalcButtonTheme" android:text="*"/>
    </TableRow>

    <TableRow android:layout_weight="1">

        <Button style="@style/CalcButtonTheme" android:text="+"/>
        <Button style="@style/CalcButtonTheme" android:text="0"/>
        <Button style="@style/CalcButtonTheme" android:text="-"/>
        <Button style="@style/CalcButtonTheme" android:text="/"/>
    </TableRow>


</TableLayout>
